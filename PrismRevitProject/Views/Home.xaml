                    Grid.Row="4"
                    Width="NaN"
                    Margin="19,3,24,6"
                    Command="{Binding InitialValueCommand}"
                    Content="Initial Value"
                    IsEnabled="{Binding ProjectModel.HasNoInittialParameter}"
