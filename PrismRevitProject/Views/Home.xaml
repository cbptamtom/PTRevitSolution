                    Margin="20,0,0,0"
                    Style="{StaticResource Text_Info}"
                    Text="Project ID:" />
                <TextBlock
                    Grid.Row="1"
                    Height="17"
                    Margin="20,0,0,0"
                    Style="{StaticResource Text_Info}"
                    Text="Project Name:" />
