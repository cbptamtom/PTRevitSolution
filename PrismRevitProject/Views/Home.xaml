                    Grid.Row="4"
                    Grid.Column="1"
                    Height="18"
                    Margin="20,0,0,0"
                    Style="{StaticResource Text_Info}"
                    Text="{Binding ProjectModel.HomeNotify}" />
            </Grid>
        </Border>

