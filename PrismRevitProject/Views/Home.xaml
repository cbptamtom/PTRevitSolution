                    Grid.Column="1"
                    Height="18"
                    Margin="20,0,0,0"
                    Style="{StaticResource Text_Info}"
                    Text="{Binding ProjectModel.ProjectID}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="18"
                    Margin="20,0,0,0"
                    Style="{StaticResource Text_Info}"
                    Text="{Binding ProjectModel.ProjectName}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Height="18"
                    Margin="20,0,0,0"
                    Style="{StaticResource Text_Info}"
                    Text="{Binding ProjectModel.HasInittialParameter}" />
