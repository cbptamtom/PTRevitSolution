<Window x:Name="MainWindow" x:Class="NullTool.APIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"

        Title="NullTool"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        Height="460" Width="730"
        Topmost="True"
        >
    <Window.Resources>
        <ResourceDictionary Source="./../Library/Resource/Styles.xaml"></ResourceDictionary>
    </Window.Resources>

    <StackPanel>
        <TextBlock Text="I'm working here" Style="{StaticResource DataGridTextBlockCenter}" ></TextBlock>

        <TextBox Name="txtInterval" Width="100" Margin="10" Text="1000"/>
        <Button Content="Change" Click="ChangeInterval_Click" Margin="10"/>
    </StackPanel>
</Window>
