<Window
    x:Class="QuantifyAUR.APIWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainWindow"
    Title="QuantifyAUR"
    Width="730"
    Height="460"
    ResizeMode="NoResize"
    ShowInTaskbar="True"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="./../Library/Resource/Styles.xaml" />
    </Window.Resources>

    <StackPanel Height="50px" Orientation="Horizontal">
        <TextBlock Style="{StaticResource DataGridTextBlockCenter}" Text="QuantifyAUR" />
        <ComboBox Width="200" ItemsSource="{Binding AllCategories}" DisplayMemberPath="Name" />
    </StackPanel>
</Window>
